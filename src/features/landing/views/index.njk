{% extends "layouts/main.njk" %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"> GOV.UK Frontend Nunjucks App</h1>

    <p class="govuk-body">Use this service to see how you can:</p>

    <ul class="govuk-list govuk-list--bullet">
      <li>construct a server side rendered app with <a href="https://mozilla.github.io/nunjucks/">nunjucks</a>
      </li>
      <li>mount assets and <a href="https://www.npmjs.com/package/govuk-frontend"> govuk-frontend</a></li>
      <li>manage errors in a server side rendered application</li>
      <li>store and manage user state between pages of a form</li>
    </ul>

    <p class="govuk-body">For more information view the code.</p>

    {{ govukButton({
    text: "Start now",
    href: "/user-details",
    classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
    isStartButton: true
    }) }}

    <h2 class="govuk-heading-m">Before you start</h2>
    <p class="govuk-body">Read the readme</p>
    <p class="govuk-body">Run the tests.</p>
  </div>

  <div class="govuk-grid-column-one-third">

    <!-- The Related items component is not part of GOV.UK Frontend but will be styled if used in the Prototype Kit -->

    <aside class="app-related-items" role="complementary">
      <h2 class="govuk-heading-m" id="subsection-title">
        Additional Links
      </h2>
      <nav role="navigation" aria-labelledby="subsection-title">
        <ul class="govuk-list govuk-!-font-size-16">
          <li>
            <a class="govuk-link" href="https://github.com/jonathangoulding/govuk-frontend-nunjucks-app">
              Github Repository
            </a>
          </li>
          <li>
            <a class="govuk-link" href="https://github.com/dwp/govuk-casa">
              Collect and Send Application framework
            </a>
          </li>
        </ul>
      </nav>
    </aside>

  </div>
</div>
{% endblock %}